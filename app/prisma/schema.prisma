// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model Funcionario {
  id        String     @default(cuid()) @id
  nome     String
  cargo   String
  area String
  imagem String
}
model Usuarios {
  id        String     @default(cuid()) @id
  nome     String
  cargo   String
  senha String
}
model Cardapio {
  id        String     @default(cuid()) @id
  prato     String
  dia   String
}
model Banners {
  id        String     @default(cuid()) @id
  nome     String
  imagem   String
}