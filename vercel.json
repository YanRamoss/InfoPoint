{
    "version": 1,
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api" }
    ],
    "builds": [
      {
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      },
      {
        "src": "next.config.js",
        "use": "@nextjs/vercel-builder",
        "config": {
          "serverFiles": ["api/**"]
        }
      }
    ]
  }